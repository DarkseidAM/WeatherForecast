<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home"
    tools:ignore="UnusedNavigation">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.cg.weatherforecast.CurrentWeather"
        android:label="Current"
        tools:layout="@layout/fragment_current_weather" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.cg.weatherforecast.DailyForecastFragment"
        android:label="Daily"
        tools:layout="@layout/fragment_forecast_list" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.cg.weatherforecast.HourlyWeatherFragment"
        android:label="Hourly"
        tools:layout="@layout/hourly_fragment_item_list" />
</navigation>